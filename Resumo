            col:3, off:3
        </div>
    </div>
<!---->                                                                                                                                                                                                                                                                                                                                                                                                     <!--
    EXEMPLO ALIGN-ITENS                                                                                                                                                                                                                                                                                                                                                            -->          
    <div class="row align-items-start border bg-light" style="height:200px">
        <div class="col border">
            top (start de cima para baixo)
        </div>
        <div class="col border">
            top (start de cima para baixo)
        </div>
    </div>
    <div class="row align-items-center border bg-light my-2" style="height:200px">
